<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alfa-Events</title>
    <link rel="icon" href="/images/AlfaEvents-icon.png" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <!-- Your custom styles if any -->
    <link rel="stylesheet" href="/css/admin/showEmployees.css" />
  </head>
  <body>
    <div class="page position-fixed">
      <div class="circle-1"></div>
      <div class="circle-2"></div>
      <div class="circle-3"></div>
      <div class="circle-4"></div>
      <div class="circle-5"></div>
      <div class="circle-6"></div>
    </div>
    <div
      class="container d-flex align-items-center justify-content-center min-vh-100"
    >
      <div class="content-box">
        <div class="card-header">
          <h3 class="text-center mb-4">Employee List</h3>
        </div>
        <div class="details-div">
          <div class="employeeList">
            <% let count = 0; %> <% if (employees.length > 0) { %> <%
            employees.forEach((employee) => { %> <% count++ %>
            <a href="/showEmployeeDetails/<%= employee._id %>" class="">
              <div
                class="employee-row d-flex justify-content-between align-items-center mb-3 p-3"
              >
                <div class="employee-div">
                  <!-- Wrap event place and date in clickable links -->
                  <h6 class="name-text"><%= count %>. <%= employee.name %></h6>
                  <h6 class="id-text">ID : <%= employee.userId %></h6>
                </div>
              </div>
            </a>
            <% }) %> <% } else { %>
            <p>No Employees is not available.</p>
            <% } %>
          </div>
        </div>
        <div class="footer">
          <a href="/dashboard"><button>Home</button></a>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </body>
</html>
